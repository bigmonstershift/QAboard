<div class="row">
	<div class="col-sm-4">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title"><%= @user.name %></h3>
			</div>
			<div class="card-body">
				<p>質問数：<%= @user.questions.count %></p>
				<p>回答数：<%= @user.answers.count %></p>
				<p>高評価数：</p>
			</div>
		</div>
	</div>
	<div class="col-sm-8">
		<ul class="nav nav-tabs nav-justified mb-3">
			<li class="nav-item"><a href="<%= user_path(@user.id) %>" class="nav-link <%= 'active' if current_page?(user_path(@user.id)) %>" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">質問</a></li>
			<li class="nav-item"><a href="#" class="nav-link">回答</a></li>
			<li class="nav-item"><a href="#" class="nav-link">お気に入り</a></li>
		</ul>
		<!-- render questions --> 
		<div class="mb-4">
	    <% @questions.each do |q| %> 
	      <div style="border-top: 1px solid #d1d1d1">
					<span><%= q.created_at %></span>
					<span class="float-right mt-1 badge <%= q.answers.count > 0 ? 'badge-primary' : 'badge-danger' %>"><%= q.answers.count > 0 ? '回答' + q.answers.count.to_s : '未回答' %></span> 
	        <div style="overflow: hidden" class="mb-3"><a href="<%= question_path(q.id) %>"><%= q.content %></a></div>
	      </div>
	    <% end %>
		</div>
		<%= paginate @questions %>
    <!-------------------->
	</div>
</div>
