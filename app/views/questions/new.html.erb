<h3 class="mb-4">聞きたいこと</h3>
<%= form_with(model: @question, local: true) do |f| %>
	<div class="form-group">
		<%= f.label :content, '本文' %>
		<%= f.text_area :content, class: 'form-control input-large', rows: 5 %>
	</div>
	<div class="form-group">
		<%= f.label :tag, 'タグ' %>
		<%= f.text_field :tag, class: 'form-control input-large' %>
	</div>
	<div class="text-center">
		<%= f.submit '質問する', class: 'btn btn-info center' %>
	</div>
<% end %>
